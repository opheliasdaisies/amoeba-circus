= form_for @act do |f|
  - if @act.errors.any?
    #error_explanation
      %h2= "#{pluralize(@act.errors.count, "error")} prohibited this act from being saved:"
      %ul
        - @act.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :date
    = f.text_field :date

  .field
    = f.label :time
    = f.text_field :time

  .actions
    = f.submit