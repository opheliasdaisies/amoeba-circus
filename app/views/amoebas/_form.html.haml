= form_for @amoeba do |f|
  - if @amoeba.errors.any?
    #error_explanation
      %h2= "#{pluralize(@amoeba.errors.count, "error")} prohibited this amoeba from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :talent
    = f.number_field :talent_id

  .field
    = f.label :act
    = f.number_field :act_id

  .actions
    = f.submit